{
  "manifest_version": 3,
  "name": "ZZZ Score Calculator",
  "version": "1.1.0",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://act.hoyolab.com/app/mihoyo-zzz-game-record/*.html*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
